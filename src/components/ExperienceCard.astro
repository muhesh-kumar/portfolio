---
import SkillPill from './elements/SkillPill.astro';

export interface Props {
  experienceStart: string;
  experienceEnd: string;
  companyName: string;
  role: string;
  description: string;
  skills: string[];
}

const {
  experienceStart,
  experienceEnd,
  companyName,
  role,
  description,
  skills,
} = Astro.props;
---

<div class="grid grid-cols-4 gap-4">
  <p class="col-span-1 font-bold text-2xl opacity-60">
    {experienceStart} - {experienceEnd}
  </p>
  <div class="col-start-2 col-span-3 flex flex-col gap-3">
    <div class="flex flex-col">
      <h2 class="font-bold text-2xl">
        {companyName}
      </h2>
      <p class="font-bold opacity-60">{role}</p>
    </div>
    <p>{description}</p>
    <div class="flex gap-3">
      {
        skills.map((skill) => {
          return <SkillPill skillName={skill} />;
        })
      }
    </div>
  </div>
</div>
