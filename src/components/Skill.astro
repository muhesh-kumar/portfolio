---
export interface Props {
  skillImageUrl: string;
  skillName: string;
}

const { skillImageUrl, skillName } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-2 lg:gap-8">
  <img
    src={skillImageUrl}
    alt={`${skillName} Logo`}
    class="w-200 h-20 lg:w-40 lg:h-40"
  />
  <h2 class="">{skillName}</h2>
</div>
