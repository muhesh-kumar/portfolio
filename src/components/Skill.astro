---
export interface Props {
  skillImageUrl: string;
  skillName: string;
}

const { skillImageUrl, skillName } = Astro.props;
---

<div class="flex flex-col items-center justify-center gap-[2rem]">
  <img
    src={skillImageUrl}
    alt={`${skillName} Logo`}
    class="w-[10rem] h-[10rem]"
  />
  <h2 class="">{skillName}</h2>
</div>
