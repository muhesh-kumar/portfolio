---
export interface Props {
  text: string;
}

const { text } = Astro.props;
---

<span
  class="group-hover:opacity-100 transition-opacity duration-500 ease-in-out bg-bottomBarIconBgColor dark:bg-darkBottomBarBackground p-1 px-2 text-sm text-fontColor dark:text-gray-100 rounded-lg absolute left-1/2 -translate-x-1/2 -top-[60px] opacity-0 m-4 mx-auto"
  >{text}</span
>
